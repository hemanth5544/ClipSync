# ============================================
# ClipSync - Root Environment Variables
# All apps use this single .env file
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# Backend Configuration
# ============================================
BACKEND_PORT=8080
DATABASE_URL=postgres://postgres:postgres@localhost:5432/clipsync?sslmode=disable
JWT_SECRET=your-secret-key-change-in-production

# ============================================
# Frontend / Desktop Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=your-better-auth-secret-change-in-production
BETTER_AUTH_BASE_URL=http://localhost:3000

# ============================================
# OAuth Providers (Optional)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# Database Connection Details (Optional - for reference)
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=clipsync
POSTGRES_PORT=5432
POSTGRES_HOST=localhost
POSTGRES_SSLMODE=disable
